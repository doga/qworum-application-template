BASE <https://basic.template.qworum.net/qworum.trig>

PREFIX :        <#>
PREFIX foaf:    <http://xmlns.com/foaf/0.1/> 
PREFIX schema:  <https://schema.org/>
PREFIX dcterms: <http://purl.org/dc/terms/>       # https://www.dublincore.org/specifications/dublin-core/dcmi-terms/
PREFIX rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs:    <http://www.w3.org/2000/01/rdf-schema#> # https://www.w3.org/TR/rdf-schema/
PREFIX xsd:     <http://www.w3.org/2001/XMLSchema#> 

PREFIX example: <http://site.example/qworum.trig#> 

# -- Document metadata --------------------------------------------------
:metadata {
  <api>
    a foaf:Document;
    dcterms:description 'Qworum API description ontology.'@en;
    foaf:maker <https://qworum.net/data/DoÄŸaArmangil.ttl#id>;
    cc:license :zero.
}

# base.qworum-class.ttl 
example:base 
  rdfs:subClassOf :ClassClass;

  :property [
    a :DataContainer;
    :name 'a data';
    :datatype :Json
  ], [
    a :ClassContainer;
    :name 'a class';
    :class <some.qworum-class.ttl#v10>
  ];

  :method [
    :path 'a-path/';

    :parameter [
      :name 'param';
      :datatype :Json; # inferrable from :schema
      :schema <product.schema.json>
    ];

    :returns [
      :datatype :Json;
      :schema <product.schema.json>
    ];

    :throws [
      :name '* a fault'
    ];

    :local [
      :name 'a local container';
      # :datatype :SemanticData; # inferrable from :shape
      :shape <transaction.shacl.trig>;
    ]
  ].


# shop.qworum-class.ttl
example:v1
  rdfs:subClassOf example:base;
  :method [
    :path 'a-second-path/'; # 'a-path/' would have overridden example:base
    :parameter [
      :name 'param';
      :schema <product.schema.json>
    ];
    :returns [
      :datatype :Json;
      :schema <product.schema.json>
    ];
  ].



:v1 # from qworum.trig
  a <shop.qworum-class.ttl#v1>;
  :base </v1/>.
